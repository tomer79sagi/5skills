<% content_for :head do %>
  <title>FLYC - Forgot Password</title>
<% end %>

<% content_for :title do %>
	<span class="content-title">Forgot Password</span>
<% end %>

<%= render :partial => '/main/messages', :locals => {:action => "general"} %>

<div class="content-body" style="padding:5em 0em 5em 0em;">

<% form_tag :action => :process_forgot_password do %>

	<table>
	  	<tr>
			<td>Password:</td>
			<td>
				<%= password_field 'person', 'password', :size => 30 %>
				<%= error_message_on @person, "password", {:prepend_text => "Password ", :css_class => "error_message_field"} %>
			</td>
		</tr>
		<tr>
			<td>Confirm New Password:</td>
			<td>
				<%= password_field 'person', 'password_confirmation' %>
				<%= error_message_on @person, "password_confirmation", {:prepend_text => "Confirm Password ", :css_class => "error_message_field"} %>
			</td>
		</tr>
	  	<tr>
	  		<td>&nbsp;</td>
			<td><%= submit_tag 'Change my password' %></td>
	  	</tr>
	</table>

	<p/>
   
<% end %>

</div>