<% content_for :head do %>

	<% if @is_new %>
  		<title>FLYC: New <%= session[:organisation_type_name] %></title>
	<% else %>
		<title>FLYC: <%= @organisation_summary.organisation_name %> | <%= session[:organisation_type_name] %></title>
	<% end %>
	
<% end %>

<% content_for :title do %>
	<span class="content-title"><%= session[:organisation_type_name] %></span>
	<span class="content-title"> |</span>
	
	<% if @is_new %>
		<span class="content-title" style="font-size:18px;font-weight:normal;">New</span>
	<% else %>
		<span class="content-title" style="font-size:18px;font-weight:normal;">Editing</span>
	<% end %>
<% end %>

<% content_for :bread_crumbs do %>

	<div style="width:100%;padding:0em 0em .5em 0em;float:right;text-align:left;">
	
		<% if @is_new %>
			<span class="content-title" style="font-size:12px;font-weight:normal;">My <%= session[:organisation_type_name_plural] %></span>
			>
			<span class="content-title" style="font-size:12px;font-weight:bold;">New <%= session[:organisation_type_name] %></span>
		<% else %>
			<span class="content-title" style="font-size:12px;font-weight:normal;"><%= link_to 'My ' + session[:organisation_type_name_plural], view_organisations_url %></span>
			>
			<span class="content-title" style="font-size:12px;font-weight:bold;">'<%= truncate(@organisation_summary.organisation_name, :options => {nil, 9}) %>'</span>
		<% end %>
		
	</div>
	
<% end %>

<%= render :partial => '/organisations/organisation_summary' %>

<%= render :partial => '/main/messages', :locals => {:action => "general"} %>

<% if @is_new %>

	<% form_tag({:action => :save_organisation}) do %>
		<%= render :partial => '/organisations/edit_organisation_details' %>
	<% end %>
		
<% else %>

	<% form_tag({:action => :update_organisation, :organisation_id => @organisation.id}) do %>
		<%= render :partial => '/organisations/edit_organisation_details' %>
	<% end %>
	
<% end %>