<!--[form:agency]-->
  
<div style="width:750px;float:left;min-height:80px;padding:1em 0em 0em 0em;">
	
	<!-- Job Application Details -->
	<table style="width:100%;text-align:left;border-collapse:collapse;">
		<tr style="vertical-align:top;">
			<td class="template_cell_title_content" 
					style="text-align:center;width:148;padding:0em .5em 0em 1em;">
				<div style="background-color:#ceecc2;padding:.7em 0em .7em 0em;margin:0em 0em 0em .5em;border-top:1px solid #00ffff;border-left:1px solid #00ffff;border-right:1px solid #00ffff;">
					<%= link_to 'Job', view_application_url(:application_id => @application_summary.application_id) %>
				</div>
			</td>
			<td class="template_cell_title_content"
					style="text-align:center;width:148;padding:0em .5em 0em .5em;">
				<div style="background-color:#cef5c2;padding:.7em 0em .7em 0em;margin:0em 0em 0em 0em;border-top:1px solid #00ffff;border-left:1px solid #00ffff;border-right:1px solid #00ffff;">
					<b>Agency</b>
				</div>
			</td>
			<td class="template_cell_title_content"
					style="text-align:center;width:148;padding:0em 1em 0em .5em;">
				<div style="background-color:#ceecc2;padding:.7em 0em .7em 0em;margin:0em 0em 0em 0em;border-top:1px solid #00ffff;border-left:1px solid #00ffff;border-right:1px solid #00ffff;">
					<%= link_to 'Company', view_application_company_url(:application_id => @application_summary.application_id) %>
				</div>
			</td>
			<td class="template_cell_title_content"
					style="text-align:center;width:148;padding:0em .5em 0em .5em;">
			</td>
			<td class="template_cell_title_content"
					style="text-align:center;width:148;padding:0em 1em 0em .5em;">
					<div style="background-color:#ceecc2;padding:.7em 0em .7em 0em;margin:0em .0em 0em 0em;border-top:1px solid #00ffff;border-left:1px solid #00ffff;border-right:1px solid #00ffff;">
						<%= link_to 'Notes (' + @application_summary.notes_total + ')', view_application_notes_url(:application_id => @application_summary.application_id) %>
					</div>
			</td>
		</tr>
	</table>
	
	  <div style="background-color:#cef5c2;width:100%;text-align:left;border:1px solid #cef5c2;padding:0em 0em 0em 1em;margin:-1px 0px 20px 0px;">
	  
  	  <% if @agency && @agency.name && @agency.id %>
	
		<div style="margin:1em 1em 1em 0em;text-align:right;border-bottom:1px gray solid;">
			<%= link_to 'Change Agency and Agent', edit_application_agency_url(:application_id => @application_summary.application_id), :class => "content_link" %>
		</div>

		<table style="width:100%;margin:0px 10px 0px 0px;">
			<tr>
				<td colspan="2" style="width:400px;text-align:right;margin:1em 1em 1em 0em;">
					<!--
					<%= link_to 'New Agency', edit_application_agency_url(:application_id => @application_summary.application_id), :class => "tab_link" %>
					|
					<%= link_to 'Edit Agency', edit_application_agency_url(:application_id => @application_summary.application_id), :class => "tab_link" %>
					-->
				</td>
				<td colspan="2" style="text-align:right;width:400px;margin:1em 1em 1em 0em;padding:0em 1em 0em 0em;">
					<!--
					<%= link_to 'New Contact', edit_application_agency_url(:application_id => @application_summary.application_id), :class => "tab_link" %>
					|
					<%= link_to 'Edit Contact', edit_application_agency_url(:application_id => @application_summary.application_id), :class => "tab_link" %>
					-->
				</td>
			</tr>
			<tr>
				<td style="padding:1em 0em 0em 0em;text-align:right;width:200px;">Agency:</td>
				<td style="padding:1em 0em 0em 0em;vertical-align:middle;text-align:left;width:200px;">
					<b style="font-size:20px;">
						<%= link_to @agency.name, view_organisation_url(:organisation_id => @agency.id) %>
					</b>
				</td>
				<td style="padding:1em 0em 0em 0em;text-align:right;width:200px;">Primary Contact:</td>
				<td style="padding:1em 0em 0em 0em;vertical-align:middle;text-align:left;width:200px;">
					<% @contact_name = @agent.first_name if @agent.first_name %>
					<% @contact_name += ' ' + @agent.last_name if @agent.last_name %>
					
					<% if @contact_name %>
						<b style="font-size:20px;">
							<%= link_to @contact_name, :controller => :contacts, :action => :view_organisation_contacts, :organisation_id => @agency.id, :contact_id => @application_summary.agent_id %>
						</b>
					<% end %>
				</td>
			</tr>
			<tr>
				<td colspan="4">&nbsp;</td>
			</tr>
			<tr>
				<td style="text-align:right;">Phone Number:</td>
				<td><b><%= @agency.phone %></b></td>
				
				<td style="text-align:right;">Mobile Number:</td>
				<td><b><%= @agent.mobile %></b></td>		
			</tr>		
			<tr>
				<td style="text-align:right;">Email Address:</td>
				<td><b><%= @agency.email %></b></td>
				
				<td style="text-align:right;">Email Address:</td>
				<td><b><%= @agent.primary_email %></b></td>
			</tr>
			<tr>
				<td style="text-align:right;">Fax Number:</td>
				<td><b><%= @agency.fax %></b></td>
				
				<td style="text-align:right;">Phone Number:</td>
				<td><b><%= @agent.phone_work %></b></td>
			</tr>
			<tr>
				<td style="text-align:right;">Website:</td>
				<td><b><%= @agency.website %></b></td>
				
				<td style="text-align:right;">Fax Number:</td>
				<td><b><%= @agent.fax %></b></td>
			</tr>
			<tr>
				<td></td>
				<td></td>
				<td style="text-align:right;">Website:</td>
				<td><b><%= @agent.website %></b></td>
			</tr>
		</table>

		<div style="margin:1em 1em 1em 0em;text-align:right;border-top:1px gray solid;">
			<%= link_to 'Change Agency and Agent', edit_application_agency_url(:application_id => @application_summary.application_id), :class => "content_link" %>
		</div>
				
	<% else %>
	
		<div style="margin:1em 1em 1em 0em;text-align:right;border-bottom:1px gray solid;">
			<!--
			<%= link_to 'New Agency', edit_application_agency_url(:application_id => @application_summary.application_id), :class => "content_link" %>
			|
			-->
			<%= link_to 'Choose Agency and Agent', edit_application_agency_url(:application_id => @application_summary.application_id), :class => "content_link" %>
		</div>
		
		<table style="width:100%;margin:0px 10px 0px 0px;">
		
		<tr>
			<td colspan="4" style="width:800px;text-align:right;margin:1em 1em 1em 0em;">
				&nbsp;
			</td>
		<tr>
		<tr>
			<td colspan="2" style="width:400px;text-align:left;margin:1em 1em 1em 0em;">
				There is no Agency assigned to this job application. Please choose one or create a new one.
			</td>
			<td colspan="2" style="width:400px;text-align:left;margin:1em 1em 1em 0em;">
				&nbsp;
			</td>
		<tr>
		<tr>
			<td colspan="4" style="width:800px;text-align:right;margin:1em 1em 1em 0em;">
				&nbsp;
			</td>
		<tr>
			
		</table>

		<div style="margin:1em 1em 1em 0em;text-align:right;border-top:1px gray solid;">
			<!--
			<%= link_to 'New Agency', edit_application_agency_url(:application_id => @application_summary.application_id), :class => "content_link" %>
			|
			-->
			<%= link_to 'Choose Agency and Agent', edit_application_agency_url(:application_id => @application_summary.application_id), :class => "content_link" %>
		</div>
		
	<% end %>
	
	</div>
	
	<div style="width:750px;text-align:right;padding:0em 0em 1em 0em;">
		<%= link_to 'Delete Job', delete_job_url(:application_id => @application_summary.application_id), :confirm => "Are you sure you want to delete job '#{@application_summary.role_title}'?", :class => "tab_link" %>
	</div>
</div>
	  
  <!--[eoform:agency]-->