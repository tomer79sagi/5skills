<% content_for :head do %>
  <title>FLYC: <%= @organisation_summary.organisation_name %> | Agency Details</title>
<% end %>

<% content_for :title do %>
	<span class="content-title"><%= session[:organisation_type_name] %> Contacts</span>
<% end %>

<% content_for :bread_crumbs do %>

	<div style="width:100%;padding:0em 0em .5em 0em;float:right;text-align:left;">
		<span class="content-title" style="font-size:12px;font-weight:normal;"><%= link_to 'My ' + session[:organisation_type_name_plural], view_organisations_url %></span>
		>
		<span class="content-title" style="font-size:12px;font-weight:normal;">'<%= link_to truncate(@organisation_summary.organisation_name, :options => {nil, 9}), view_organisation_url(:organisation_id => @organisation_summary.organisation_id) %>'</span>
		>
		<span class="content-title" style="font-size:12px;font-weight:bold;">Contacts</span>
	</div>
	
<% end %>

<%= render :partial => '/organisations/organisation_summary' %>

<%= render :partial => '/main/messages', :locals => {:action => "general"} %>

<% form_tag({:action => :view_organisation_contacts, :organisation_id => @organisation_summary.organisation_id}) do %>

	<%= render :partial => 'view_organisation_contacts_details' %>
   
<% end %>