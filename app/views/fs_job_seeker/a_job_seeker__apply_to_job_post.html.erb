<% content_for :head do %>
	5skills.me 
<% end %>

<% content_for :title do %>
	Job seeker
<% end %>

<div style="width:1024px;margin:0px auto;height:1100px;border-bottom:1px solid #DCDCDC;">
		
	<!-- Header information -->
	
	<div style="height:1100px;width:800px;margin:0 auto;display:table;">
		
		<div style="width:800px;border-bottom:2px solid #DCDCDC;">
				
			<div style="width:800px;padding-top:10px;height:40px;display:table;margin:0 auto;">
				<div style="width:800px;text-align:center;">
					<span style="font-weight:bold;font-size:30px;">Manpower</span>
					&nbsp;
					<span style="font-size:16px;">is hiring</span>
				</div>
			</div>
			
			<div style="margin-top:10px;padding:10px 0px 0px 0px;width:800px;font-size:14px;text-align:center;">
				Teaser teaser teaser teaser teaser teaser teaser teaser teaser teaser teaser teaser teaser 
			</div>
			
			<div style="padding:30px 0px 0px 0px;width:800px;height:110px;font-size:14px;">
				gggg
			</div>
		
		</div>
		
		<div style="width:100%;margin:0px auto;">
		
			<%= render :partial => '/js/html_template/_messages' %>
			
			<!-- 5skills profile and selection -->
			
			<div style="margin-top:20px;margin:0 auto;display:table;">
				
				<div style="width:100%;margin:0 auto;display:table;">
					
					<%= render :partial => '/js/html_template/__fs_profile/_fs_profile' %>
					
				</div>
				
				<div style="width:170px;margin-top:83px;text-align:right;display:table;margin:0 auto;">
					
				<% if @job_application %>
				
					<div style="border:1px solid #00923D;padding-top:10px;margin-left:180px;background-color:#39B54A;width:210px;height:70px;text-align:center;">
						<span style="font-weight:bold;font-size:30px;color:white;">Applied!</span>
						<br/>
						<span style="font-style:italic;color:white;"><%= format_time(@job_application.updated_at, FsBaseController::TIME_FORMAT_TYPES[:time_ago]) %></span>
					</div>
				
				<% else %>
				
					<button id="btn__apply_to_job" style="background-color:green;width:170px;height:70px;text-align:center;">
						<span style="font-weight:bold;font-size:30px;color:white;">Apply</span>
						<br/>
						<span style="font-style:italic;color:white;">NOW!</span>
					</button>
				
				<% end %>
					
				</div>
			</div>
			
		</div>
				
	</div>
	
</div>
