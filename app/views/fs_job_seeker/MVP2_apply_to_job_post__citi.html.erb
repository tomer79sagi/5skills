<% content_for :head do %>
	5skills.me 
<% end %>

<% content_for :title do %>
	Job seeker
<% end %>

<div style="width:1024px;margin:0px auto;height:1100px;border-bottom:1px solid #DCDCDC;">
		
	<!-- Header information -->
	
	<div style="height:1100px;border-left:1px solid #DCDCDC;width:800px;float:left;">
		
		<div style="width:800px;border-bottom:2px solid #DCDCDC;">
			
