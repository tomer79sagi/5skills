<table>
	<tr>
		<td style="text-align:right;width:100px;" rowspan="2">
			<% if @upload_files[:profile_photo] %>
				<%= fs_image_tag(@upload_files[:profile_photo].id, @upload_files[:profile_photo].large_dimensions) %>
			<% else %>
				N/A
			<% end %>
		</td>
		<td style="text-align:right;">Full Name:</td>
		<td style="text-align:left;">
			<b><%= @job_seeker.full_name if @job_seeker %></b>
		</td>
		<td style="text-align:right;">Email:</td>
		<td style="text-align:left;">
			<b><%= session[:user].email %></b>
			<%= error_message_on "job_seeker", "email", {:prepend_text => "Full name ", :css_class => "error_message_field"} %>
		</td>
	</tr>
	<tr>
		<td style="text-align:right;">CV:</td>
		<td style="text-align:left;">
			<% if @upload_files[:cv] %>
				<%= link_to squeeze_c(@upload_files[:cv].name, 35), :action => :download_file, :file_id => @upload_files[:cv].id %>
			<% else %>
				N/A
			<% end %>
		</td>
		<td style="text-align:right;">Profile photo:</td>
		<td style="text-align:left;">
			<% if @upload_files[:profile_photo] %>
				<%= link_to squeeze_c(@upload_files[:profile_photo].name, 35), :action => :download_file, :file_id => @upload_files[:profile_photo].id %>
			<% else %>
				N/A
			<% end %>
		</td>
		<td colspan="2" style="text-align:left;">
			<% if @job_seeker.anonymous %> 
				<b>Anonymous</b>
			<% else %>
				Anonymous
			<% end %>
			
			<br/>
			
			<% if @job_seeker.looking_for_work && @job_seeker.looking_for_work == 1 %> 
				<b>Looking for work</b>
			<% else %>
				Looking for work
			<% end %>
		</td>
	</tr>
</table>