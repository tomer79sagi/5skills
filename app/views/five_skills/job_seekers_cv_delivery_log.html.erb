<% content_for :head do %>
	5skills.me
<% end %>

<% content_for :title do %>
	Job seekers CV delivery log
<% end %>

<table id='results_table'>
	
	<tr id='results_row_titles'>
		<td><b>Job seeker</b></td>
		<td><b>Skills profile</b></td>
		<td><b>Status / Actions</b></td>
	</tr>		

	<% if @job_seekers_h.nil? %>
	
		<tr id='-1'>
			<td colspan="3">Please enter 5 skills to get results!</td>
		</tr>
	
	<% else %>
	
		<% @job_seekers_h.each do |job_seeker_id, job_seeker_obj| %>
		
			<tr>
				
				<td>				
					
					<% if job_seeker_obj[:full_name] && !job_seeker_obj[:full_name].blank? %>
				
					
						<% if job_seeker_obj[:files] && job_seeker_obj[:files][:profile_photo] && job_seeker_obj[:files][:profile_photo][:file_id] && job_seeker_obj[:files][:profile_photo][:medium_dimensions] %>
							
							<% link_to({:controller => "five_skills", :action => "view_job_seeker_profile", :job_seeker_id => job_seeker_id}) do %>
								<%= fs_image_tag(job_seeker_obj[:files][:profile_photo][:file_id], job_seeker_obj[:files][:profile_photo][:medium_dimensions]) %>
							<% end %>
							
						<% end %>
						
						<br/>
						<%= job_seeker_obj[:full_name] %>
				
					<% end %>
					
				</td>
				<td style="text-align:left;">
					
					<table>
						
						<% 5.times do |i| %>
				
							<% @skill_key = "skill_" + (i + 1).to_s %>
						
							<tr>
								<td style="text-align:center;vertical-align:middle;"><%= i + 1 %></td>
								<td style="text-align:left;"><%= job_seeker_obj[:skills_profile][@skill_key][:name] %></td>
								<td style="text-align:left;"><%= job_seeker_obj[:skills_profile][@skill_key][:years_experience] %></td>
								<td style="text-align:left;"><%= job_seeker_obj[:skills_profile][@skill_key][:self_rate] %></td>
								<td style="text-align:left;"><%= job_seeker_obj[:skills_profile][@skill_key][:details] %></td>
								
								<% if i == 0%>
									<td rowspan="5" style="text-align:left;"><%= job_seeker_obj[:skills_profile][:additional_requirements] %></td>
								<% end %>
							</tr>
							
						<% end %>
					
					</table>
				</td>
				<td style="text-align:left;">
					<b><%= job_seeker_obj[:cv_trans_status_name] %></b>
					<br/>
					<%= job_seeker_obj[:cv_trans_updated_at_formatted] %>
					<br/>
					<i><%= job_seeker_obj[:cv_trans_updated_at_time_ago] %></i>
					
					<% if job_seeker_obj[:files][:cv] && job_seeker_obj[:cv_trans_status_id] == Fs2CvsToJobsTransaction::STATUS_TYPES[:cv_sent] %>
						<br/></br/>
					
						<%= link_to "Download CV!", :action => :download_file, :file_id => job_seeker_obj[:files][:cv][:file_id] %>
					<% end %>
				</td>
			</tr>
			
		<% end %>
	
	<% end %>
		
</table>