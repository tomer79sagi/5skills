<% content_for :head do %>
  <title>FLYC: Messages</title>
<% end %>

<% content_for :title do %>
	<span class="content-title" style="padding:0em 0em 1em 0em;margin:0em 0em 0em -.05em;">Messages</span>
<% end %>

<% content_for :bread_crumbs do %>

	<div style="width:100%;padding:0em 0em .5em 0em;float:right;text-align:left;">
		<span class="content-title" style="font-size:12px;font-weight:normal;">Messages</span>
		>
		
		<% if session[:page] == "inbox" %>
			<span class="content-title" style="font-size:12px;font-weight:normal;">Inbox</span>
		<% elsif session[:page] == "sent_messages" %>
			<span class="content-title" style="font-size:12px;font-weight:normal;">Sent Items</span>
		<% end %>
		
	</div>
	
<% end %>

<%= render :partial => '/main/messages', :locals => {:action => "general"} %>

<%= render :partial => 'admin/messages/view_messages' %>